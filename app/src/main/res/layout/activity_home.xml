<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/gh_black"
    tools:context=".HomeActivity">

    <View
        android:id="@+id/header_background"
        android:layout_width="412dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/navigator_background"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="657dp"
        android:background="@drawable/navigator_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_text"
        android:layout_width="117dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal|center_vertical"
        android:text="Home"
        android:textColor="@color/gh_white"
        android:textColorHighlight="@color/gh_white"
        android:textColorHint="@color/gh_white"
        android:textColorLink="@color/gh_white"
        android:textCursorDrawable="@color/gh_white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/header_background"
        app:layout_constraintStart_toStartOf="@+id/header_background"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/nav_home_btn"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:layout_marginEnd="328dp"
        android:layout_marginRight="328dp"
        android:text="Home"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nav_notify_btn"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:layout_marginEnd="246dp"
        android:layout_marginRight="246dp"
        android:text="Notify"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nav_action_btn"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:text="Action"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nav_calendar_btn"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:text="Calendar"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nav_profile_btn"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:text="Profile"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>